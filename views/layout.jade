doctype html
html(lang='en')
  head
    // Basic Page Needs
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title= title
    meta(name='description', content='The Glance App helps you find great coffee shops to work from. Our community classifies the things most important to you. These include wifi, outlets, bathrooms, seating, staff and coffee.')
    meta(name='keywords', content='coffee, work,')
    meta(name='author', content='Glance')
    
    // Theme Color
    meta(name='theme-color', content='#f5a623')
    
    // Mobile Specific Metas
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    
    // iOS Specifics
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='format-detection', content='telephone=no')
    link(rel='apple-touch-icon-precomposed', href='images/icons/Icon-54.png')
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href='images/icons/Icon-72.png')
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href='images/icons/Icon-114.png')
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href='images/icons/Icon-144.png')

    // Facebook Metas
    meta(property='og:url', content='http://glance-app.com/')
    meta(property='og:site_name', content='Glance | Find your favorite Spot at a glance!')
    meta(property='og:description', content='The Glance App helps you find great coffee shops to work from. Our community classifies the things most important to you. These include wifi, outlets, bathrooms, seating, staff and coffee.')
    meta(property='og:image', content='http://glance-app.com/images/social/facebook-object.jpg')
    meta(property='og:title', content='Glance | Find your favorite Spot at a glance!')
    
    // Twitter Metas
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@GlanceAppTeam')
    meta(name='twitter:creator', content='@GlanceAppTeam')
    meta(name='twitter:title', content='Glance | Find your favorite Spot at a glance!')
    meta(name='twitter:description', content='The Glance App helps you find great coffee shops to work from. Our community classifies the things most important to you. These include wifi, outlets, bathrooms, seating, staff and coffee.')
    meta(name='twitter:image', content='http://glance-app.com/images/social/twitter-card.jpg')

    // Fonts
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Montserrat:400,700')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Raleway:200,400,800')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Clicker+Script')

    // Styles
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/helper.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    // Google maps
    script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js')
  body.v1
    #header.glance-header
      header.clearfix
        .logo-container.pull-left
          a.logo-link.link-reset
            h1.logo Glance

    main#site-content.glance-main(role='main')
      block content

    #footer.glance-footer

    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(type='text/javascript').
      window.jQuery || document.write('<script src="javascripts/jquery-2.1.1.min.js"><\/script>');
    script(type='text/javascript', src='javascripts/modernizr.js')
    script(type='text/javascript', src='javascripts/sitewide.js')
