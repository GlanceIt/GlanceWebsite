extends layout

block content
    h1.
        Spot List
    ul
        each spot, i in spot_list
            li
                a(href="/spots/#{spot.name}")= spot.name
                p Address: #{spot.address.Street}, #{spot.address.City}, #{spot.address.State}, #{spot.address.Zip}
                p Overall: #{spot.aspects.Overall}
                p Wifi: #{spot.aspects.Wifi}
                p Staff: #{spot.aspects.Staff}
                p Coffee: #{spot.aspects.Coffee}
